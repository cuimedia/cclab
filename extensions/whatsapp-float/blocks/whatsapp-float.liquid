{%- comment -%} WhatsApp Float — App Embed (App settings driven) {%- endcomment -%}

{% schema %}
{
  "name": "WhatsApp Float",
  "target": "body",
  "settings": [
    { "type": "checkbox", "id": "enabled", "label": "Enable", "default": true },
    { "type": "paragraph", "content": "Configure options inside the app (Apps → whatsapp-float → Settings)." }
  ]
}
{% endschema %}

{% if block.settings.enabled %}
  <script>
    window.__WA_FLOAT_SHOP__ = "{{ shop.permanent_domain }}";
  </script>
  <script defer src="{{ 'wa-float.js' | asset_url }}"></script>
{% endif %}
